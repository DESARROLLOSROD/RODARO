{
  "name": "@rondines/agent",
  "version": "1.0.0",
  "description": "Agente Local de Descarga para Sistema de Rondines",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && pkg . --targets node18-win-x64 --output dist/rondines-agent.exe",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      "config.json"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "serialport": "^12.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "pkg": "^5.8.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
